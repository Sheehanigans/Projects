@model CarDealership.UI.Models.ListingVM

@{
    ViewBag.Title = "New";
}

<div class="row">
    <h3>New Vehicles</h3>
    <div class="col-xs-12">
        <p>Quick Search</p>
        <p>form here</p>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <h3>Results</h3>
        @foreach (var listing in Model.Listings)
        {
            <div class="col-xs-12 col-sm-6 col-md-4 listingBoarder">
                <p><strong>@listing.ModelYear @listing.MakeName @listing.ModelName</strong></p>
                <h1>PIC</h1>
                <p><strong>$@listing.SalePrice</strong></p>
                <p><strong>Body Style:</strong>@listing.BodyStyleName</p>
                <p><strong>Trans:</strong>@listing.Transmission</p>
                <p><strong>Color:</strong>@listing.ExteriorColorName</p>
                <p><strong>Interior:</strong>@listing.InteriorColorName</p>
                <p><strong>Mileage:</strong>@listing.Mileage</p>
                <p><strong>VIN#:</strong>@listing.VIN</p>
                <p><strong>Sale Price:</strong>@listing.SalePrice</p>
                <p><strong>MSRP:</strong>@listing.MSRP</p>
            </div>
        }
    </div>
</div>

